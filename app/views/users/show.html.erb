<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%# side_menu %>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    
    <%# main_menu %>
    <div class='col-md-8 offset-md-1'>
      
      <%# 投稿一覧 %>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      
      <%# 指定日の投稿数検索 %>
      <%= form_with url: date_searches_path, local: false, method: :get do |f| %>
        <%= f.date_field :date %>
        <%= f.submit '検索', class: "btn-primary" %>
      <% end %>
      
      <div class="book_count_table">
      </div>

    </div>
  </div>
</div>
